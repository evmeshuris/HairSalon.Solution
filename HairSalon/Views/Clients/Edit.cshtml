@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit a client</h2>

<h4>Edit client's personal information: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Age)
  @Html.EditorFor(model => model.Age)

  @Html.LabelFor(model => model.PhoneNumber)
  @Html.EditorFor(model => model.PhoneNumber)

  <input class="myCssClass" type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Clients", "Index", null, null, new {@class="myCssClass"})</p>