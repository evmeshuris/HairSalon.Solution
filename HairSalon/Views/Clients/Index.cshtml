@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>Please, choose you stylist. If there are not stylist, please, add a stylist first!</h3>
} 

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) - Your stylist is @client.Stylist.Name</li>
}

<p>@Html.ActionLink("Add new client", "Create", null, null, new {@class="myCssClass"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class="myCssClass"})</p>