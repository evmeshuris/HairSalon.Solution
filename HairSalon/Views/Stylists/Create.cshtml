@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new Stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <input class="myCssClass" type="submit" value="Add new a Stylist" />
}
<p>@Html.ActionLink("Show all Stylists", "Index", null, null , new {@class="myCssClass"})</p>
<p>@Html.HiddenFor(model => model.StylistId)</p>