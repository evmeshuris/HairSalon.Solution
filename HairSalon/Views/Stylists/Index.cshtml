@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Here are our stylists</h1>

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Stylist", "Create", null, null , new {@class="myCssClass"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null , new {@class="myCssClass"})</p>